@page "/todo"
<h3>Todo</h3>

<div class="col-md-4 mb-3">
    <input class="form-control" placeholder="Mighty Palpatine's item" @bind="todo" />
    <button class="btn-primary mt-1" @onclick="Add">Add</button>
</div>

<ul class="list-group">
    @foreach (var todo in todos)
    {
        <li class="list-group-item">
            @todo.Tittle
            <div class="float-right custom-control custom-checkbox">
                <input type="checkbox" class="form-check-input" id="doneCheckBox" @bind="todo.IsDone" />
                <label class="form-check-label" for="doneCheckBox">Done</label>
            </div>
        </li>
    }
</ul>

@code {

    private IList<TodoItemModel> todos = new List<TodoItemModel>
    {
        new TodoItemModel
        {
            IsDone = false,
            Tittle = "Nauczyc sie Blazor",
        },
        new TodoItemModel
        {
            IsDone = true,
            Tittle = "Przelciznik hajsu",
        }
    };

    private string todo;
    private void Add()
    {
        if (!string.IsNullOrWhiteSpace(todo))
        {
            todos.Add(new TodoItemModel { Tittle = todo });
            todo = string.Empty;
        }
    }
}
